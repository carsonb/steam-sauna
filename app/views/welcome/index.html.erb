<h1>Welcome#index</h1>
<%= link_to image_tag("http://cdn.steamcommunity.com/public/images/signinthroughsteam/sits_large_noborder.png"), '/auth/steam' %>

<% if session.key? :current_user %>
<h3>Current user:</h3>
<%= image_tag current_user.image %>
<p><%= current_user.nickname %></p>
<p><%= current_user.uid %></p>
<% end %>

<h4>Yer Frenz</h4>
<% if @friends.count > 0 %>
  <%= form_tag(:action => 'search') do %>
    <ul>
    <% @friends.each do |friend| %>
      <li>
        <%= check_box_tag 'friends[]', friend.uid, nil, :id => friend.uid -%>
        <%= label_tag friend.uid, "#{image_tag(friend.image)} #{friend.nickname}".html_safe -%>
      </li>
    <% end %>
    </ul>
    <%= submit_tag("Match") %>
  <% end %>
<% else %>
  <div>Sorry, no friends</div>
<% end %>

<h4>Yer Gams</h4>
<ul>
<% if @games %>
  <% @games.each do |game| %>
  <li>
    <%= game_logo(game) %>
  </li>
  <% end %>
<% end %>
</ul>
